@model LojaVirtual.Dominio.Entidades.Produto

<div class="well">
    <h3><strong>@Model.Nome</strong></h3>
    <div class="row">
        <div class="col-lg-9">
            @Model.Descricao
        </div>
        <div class="col-lg-3">
            <h3><div class="label-primary pull-right">@Model.Preco.ToString("c")</div></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                @using (Html.BeginForm("Adicionar", "Carrinho"))
                {
                    @Html.HiddenFor(x => x.ProdutoId)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-success" value="Comprar" />
                }
            </div>
        </div>
    </div>
</div>
