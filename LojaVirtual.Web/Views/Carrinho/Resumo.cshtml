@model LojaVirtual.Dominio.Entidades.Carrinho

<div class="navbar-right">
    @Html.ActionLink("Checkout","Index", "Carrinho", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-success navbar-btn"})
</div>

<div class="navbar-text navbar-right">
    <b>Seus produtos:</b>
    @Model.ListaCarrinho.Sum(x => x.Quantidade) item(s), @Model.ObterValorTotal().ToString("c")
</div>




